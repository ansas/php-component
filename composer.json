{
    "name": "ansas/php-component",
    "type": "library",
    "description": "PHP components - collection of cross-project PHP classes",
    "keywords": [
        "PHP",
        "component",
        "convert",
        "session",
        "format",
        "file",
        "monolog",
        "slim",
        "profiler"
    ],
    "license": "MIT",
    "authors": [{
        "name": "Ansas Meyer",
        "email": "mail@ansas-meyer.de",
        "homepage": "https://ansas-meyer.de"
    }],
    "require": {
        "php": ">=5.6",
        "ext-ctype": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : "^6"
    },
    "suggest": {
        "monolog/monolog": "Needed when using Ansas\\Monolog classes"
    },
    "autoload": {
        "psr-4": {
            "Ansas\\": "src/"
        }
    }
}
