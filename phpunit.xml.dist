<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true">
  <coverage>
    <include>
      <directory suffix=".php">src/</directory>
    </include>
    <exclude>
      <directory>vendor/</directory>
      <directory>tests/</directory>
    </exclude>
  </coverage>
  <testsuites>
    <testsuite name="PHP components">
      <directory>tests/</directory>
    </testsuite>
  </testsuites>
</phpunit>
